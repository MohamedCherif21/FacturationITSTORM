{# templates/pdf/upload_with_dates.html.twig #}

{% extends 'basefront.html.twig' %}

{% block title %}Télécharger un fichier PDF avec Dates{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}

<h1>Télécharger un fichier PDF</h1>
<hr/>
    {{ form_start(form) }}

    <div class="col-md-4">
        <div class="form-group">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.startDate) }}
        </div>
    </div>

    <div class="col-md-4">
        <div class="form-group">
            {{ form_label(form.endDate) }}
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.endDate) }}
        </div>
    </div>

        <div class="col-md-4">
        <div class="form-group">
            {{ form_label(form.pdfFile) }}
            {{ form_widget(form.pdfFile, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.pdfFile) }}
        </div>
    </div>
  

    <div class="col-md-2">
        <div class="form-group">
             <button type="submit" class="btn btn-primary">Vérifier</button>
        </div>  
    </div>


    {{ form_end(form) }}

    

{% endblock %}
